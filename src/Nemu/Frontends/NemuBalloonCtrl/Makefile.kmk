SUB_DEPTH = ../../../..
include $(KBUILD_PATH)/subheader.kmk

PROGRAMS += NemuBalloonCtrl
 NemuBalloonCtrl_TEMPLATE   = NEMUMAINCLIENTEXE
 NemuBalloonCtrl_DEFS      += \
	NEMU_WATCHDOG_GLOBAL_PERFCOL NEMU_BUILD_TARGET=\"$(KBUILD_TARGET).$(KBUILD_TARGET_ARCH)\"
 NemuBalloonCtrl_DEFS.win   = _WIN32_WINNT=0x0500
 NemuBalloonCtrl_SOURCES    = \
	NemuWatchdog.cpp      \
	NemuWatchdogUtils.cpp \
	NemuModAPIMonitor.cpp \
	NemuModBallooning.cpp
 NemuBalloonCtrl_SOURCES.win = \
	NemuBalloonCtrl.rc

