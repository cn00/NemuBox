# don't build testcases to save time, they are not needed for the package
NEMU_WITH_TESTCASES        :=
NEMU_WITH_VALIDATIONKIT    :=

# required for NEMU_WITH_RUNPATH
NEMU_WITH_ORIGIN           :=

NEMU_DOCBOOK_WITH_LATEX    := 1
KBUILD_MSG_STYLE           := brief
NEMU_PATH_APP_PRIVATE_ARCH := /usr/lib/virtualbox
NEMU_PATH_SHARED_LIBS      := $(NEMU_PATH_APP_PRIVATE_ARCH)
NEMU_WITH_RUNPATH          := $(NEMU_PATH_APP_PRIVATE_ARCH)
NEMU_PATH_APP_PRIVATE      := /usr/share/virtualbox
NEMU_PATH_APP_DOCS          = $(NEMU_PATH_PACKAGE_DOCS)
NEMU_WITH_NEMU_IMG         := 1
