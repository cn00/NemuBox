#
# nemumouse_drv
#
if1of ($(KBUILD_TARGET), linux)
 SYSMODS += nemumouse_drv
 nemumouse_drv_TEMPLATE = NEMUGUESTR3XF86MOD
 nemumouse_drv_DEFS.linux = linux
 nemumouse_drv_DEFS.x86 += __i386__
 # This one has to be defined when building server code on systems where
 # unsigned long is 64bits
 nemumouse_drv_DEFS.amd64 += _XSERVER64
 nemumouse_drv_DEFS += \
        _POSIX_C_SOURCE=199309L _POSIX_SOURCE _XOPEN_SOURCE _DEFAULT_SOURCE \
	_BSD_SOURCE _SVID_SOURCE _GNU_SOURCE SHAPE XINPUT XKB LBX XAPPGROUP \
	XCSECURITY TOGCUP XF86BIGFONT DPMSExtension PIXPRIV PANORAMIX RENDER \
	GCCUSESGAS AVOID_GLYPHBLT PIXPRIV SINGLEDEPTH XFreeXDGA XvExtension \
	XFree86LOADER XFree86Server XF86VIDMODE XvMCExtension SMART_SCHEDULE \
	BUILDDEBUG X_BYTE_ORDER=X_LITTLE_ENDIAN DNDEBUG FUNCPROTO=15 NARROWPROTO \
	IN_MODULE XFree86Module PNP_MOUSE IN_XF86_MODULE
 nemumouse_drv_INCS := \
	$(NEMU_PATH_X11_XFREE_4_3)/include \
	$(NEMU_PATH_X11_XFREE_4_3)/include/extensions \
	$(NEMU_PATH_X11_XFREE_4_3)/include/X11 \
	$(NEMU_PATH_X11_XFREE_4_3)/programs/Xserver/hw/xfree86 \
	$(NEMU_PATH_X11_XFREE_4_3)/programs/Xserver/hw/xfree86/common \
	$(NEMU_PATH_X11_XFREE_4_3)/programs/Xserver/hw/xfree86/os-support \
	$(NEMU_PATH_X11_XFREE_4_3)/programs/Xserver/hw/xfree86/os-support/bus \
	$(NEMU_PATH_X11_XFREE_4_3)/programs/Xserver/mi \
	$(NEMU_PATH_X11_XFREE_4_3)/programs/Xserver/include \
	$(PATH_SUB_CURRENT)
 nemumouse_drv_SOURCES = \
	nemumouse.c
 # Any global symbols in the driver object files will be added to XFree86's
 # symbol table, which can cause problems if we e.g. define a symbol in two
 # modules.
 nemumouse_drv_POST_CMDS = \
	objcopy --keep-global-symbol nemumouseModuleData $(out) $(out)-objcopy$$(NLTAB) \
	$(MV) -f $(out)-objcopy $(out)
endif


