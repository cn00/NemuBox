ifdef NEMU_USE_SYSTEM_XORG_HEADERS
 # As nemumouse_drv is not needed at all for X.Org Server 1.7 and later do not
 # build it in this case.
 DLLS    := $(filter-out nemumouse_drv_%,$(DLLS))
 SYSMODS := $(filter-out nemumouse_drv%,$(SYSMODS))
endif


# Check the undefined symbols in the X.Org modules against lists of allowed
# symbols.  Not very elegant, but it will catch problems early.

ifdef NEMU_WITH_TESTCASES
# ifndef NEMU_ONLY_ADDITIONS
 ifndef NEMU_USE_SYSTEM_XORG_HEADERS
  ifeq ($(KBUILD_TARGET),linux)
   ifeq ($(KBUILD_HOST_ARCH),$(KBUILD_TARGET_ARCH))
    ifndef NEMU_ONLY_SDK
     NEMUMOUSE_SRC_PATH := $(PATH_SUB_CURRENT)

     ifeq ($(KBUILD_TARGET),linux)
      TESTING += $(nemumouse_drv_0_OUTDIR)/tstnemumouse68.run
      OTHERS += $(nemumouse_drv_0_OUTDIR)/tstnemumouse68.run
$$(nemumouse_drv_0_OUTDIR)/tstnemumouse68.run: $$(nemumouse_drv_1_STAGE_TARGET)
	$(QUIET)$(call MSG_L1,Checking for unresolved symbols in $<)
	$(QUIET)/bin/sh $(PATH_ROOT)/src/bldprogs/checkUndefined.sh $(KBUILD_HOST) \
	    "$(nemumouse_drv_1_STAGE_TARGET)" --static "$(NEMUMOUSE_SRC_PATH)/../undefined_xfree86" "$(NEMUMOUSE_SRC_PATH)/../undefined_xfree86_modules"
	$(QUIET)$(APPEND) -t "$@" "done"
     endif

##
# Using the extra expansion to replace $(ver) before eval, thus everything
# else needs escaped dollars.
     define def_nemumouse_test
      TESTING += $$(nemumouse_drv$(ver)_0_OUTDIR)/tstnemumouse$(ver).run
      OTHERS  += $$(nemumouse_drv$(ver)_0_OUTDIR)/tstnemumouse$(ver).run
      $$$$(nemumouse_drv$(ver)_0_OUTDIR)/tstnemumouse$(ver).run: $$$$(nemumouse_drv$(ver)_1_STAGE_TARGET)
	$$(QUIET)$$(call MSG_L1,Checking for unresolved symbols in $$<)
	$$(QUIET)$$(ASH) $$(PATH_ROOT)/src/bldprogs/checkUndefined.sh $$(KBUILD_HOST)  \
	        $$(nemumouse_drv$(ver)_1_STAGE_TARGET) $$(NEMUMOUSE_SRC_PATH)/../undefined_xfree86 $(NEMUMOUSE_SRC_PATH)/../undefined_xfree86_modules $$(NEMUMOUSE_SRC_PATH)/../undefined_xorg
	$$(QUIET)$$(APPEND) -t "$$@" "done"
    endef

     $(foreach ver, _70 _71 _13 _14 _15 _16, $(eval $(def_nemumouse_test)))

     ifneq ($(KBUILD_TARGET), linux)
      $(foreach ver, _17 _18 _19 _110 _111 _112 _113, $(eval $(def_nemumouse_test)))

     endif # neq ($(KBUILD_TARGET),linux)

    endif # ! NEMU_ONLY_SDK
   endif # eq ($(KBUILD_HOST_ARCH),$(KBUILD_TARGET_ARCH))
  endif # eq ($(KBUILD_TARGET),linux)
 endif # ! NEMU_USE_SYSTEM_XORG_HEADERS
# endif # ! NEMU_ONLY_ADDITIONS
endif # NEMU_WITH_TESTCASES

